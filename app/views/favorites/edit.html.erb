<%= render 'cocktails/show'%>


<%= bootstrap_form_for @favorite, url: user_favorite_path(current_user, @favorite), method: :patch do |f|%>
<%= f.hidden_field :user_id, value:  current_user.id  %>
<%= f.hidden_field :cocktail_id, value:  @cocktail.id  %>
<%=f.select :rating, [1,2,3,3,4,5,6,7,8,9,10 ]%>
<%=f.text_field :comments%>
<%=f.submit "Save Changes", class: 'btn btn-primary'%>
<%= link_to "Cancel", user_favorites_path(current_user), class: "btn btn-danger"%>
<%end%>