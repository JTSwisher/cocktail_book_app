<h1>My Favorites</h1>
<%= link_to "All Cocktails", cocktails_path, class: "btn btn-primary" %>
<%= link_to "Create New Cocktail",new_user_cocktail_path(current_user), class: "btn btn-primary"%>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Average Rating</th>
      <th scope="col">Created By</th>
    </tr>
  </thead>
  <tbody>
    <% @favorites.each do |c| %>
 
        <tr>
            <!- use favorites helper to locate cocktail object associated with favorite object, display name ->
            <td><%= link_to highest_rated_cocktails(c).name, user_favorite_path(current_user.id, c.id)%></td>
          
           <!- use favorites helper to locate cocktail object associated with favorite object, display rating ->
            <%= favorites_rating(c) %>

            <td><%= highest_rated_cocktails(c).user.name %></td>
        </tr>
    <%end%>
  </tbody>
  
</table>