<div class="container">
    <div class="form">
        <h1>Create a New Cocktail</h1>

        <%= bootstrap_form_for @cocktail do |f|%>
            <%= render partial: "form", locals: {cocktail: @cocktail, f: f} %>
            
            <%= f.submit "Create Cocktail", class: "btn btn-primary"%>
            <%= link_to "Cancel", user_path(current_user), class: "btn btn-danger"%>
        <%end%>
    </div>
</div>