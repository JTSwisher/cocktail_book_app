<h1>Cocktails</h1>
<%= link_to "Highest Rated", favorites_path %>
 <% if flash[:alert] %>
        <div class="notice"><%= flash[:alert] %></div>
<% end %>


<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Average Rating</th>
      <th scope="col">Created By</th>
    </tr>
  </thead>
  <tbody>
    <% @cocktails.each do |c| %>
            
        <tr>
            <td><%= link_to c.name, cocktail_path(c)%></td>
            <%if rating_count(c.id) > 0 %>
                <td><%= average_rating(c.id) %> / 10</td>
            <%else%>
                <td>Not Rated</td>
            <%end%>

            <%if c.user_id == current_user.id%>
                <td>Me</td>
            <%else%>
                <td><%= c.user.name %></td>
            <%end%>
        </tr>
            
    <%end%>
  
  </tbody>
</table>

    




