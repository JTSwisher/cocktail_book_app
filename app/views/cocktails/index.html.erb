<% if current_path %>
    <h1>My Recipes</h1>
    <%= link_to "All Cocktails", cocktails_path, class: "btn btn-primary" %>
    <%= link_to "Create New Cocktail",new_user_cocktail_path(current_user), class: "btn btn-primary"%>
<% else%>
    <h1>Cocktails</h1>
    <%= link_to "Top Rated Cocktails", favorites_path, class: "btn btn-primary" %>
    <%= link_to "Create New Cocktail",new_user_cocktail_path(current_user), class: "btn btn-primary"%>
<% end%>


 <% if flash[:alert] %>
        <div class="notice"><%= flash[:alert] %></div>
<% end %>


<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Average Rating</th>
      <th scope="col">Created By</th>
    </tr>
  </thead>
  <tbody>
    <% @cocktails.each do |c| %>
            
        <tr>
            <td><%= link_to c.name, cocktail_path(c)%></td>
            
            <%= cocktail_rating(c) %>

            <%= cocktail_owner(c) %>
        </tr>
            
    <%end%>
  
  </tbody>
</table>

    




